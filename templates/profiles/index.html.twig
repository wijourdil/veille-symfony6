{% extends "base.html.twig" %}

{% block title %}Liste des profils{% endblock %}

{% block breadcrumb %}
    <li class="is-active">
        <a href="#" aria-current="page">
            <span class="icon is-small"><i class="fas fa-hashtag" aria-hidden="true"></i></span>
            <span>Profils</span>
        </a>
    </li>
{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <div class="columns is-multiline">
                {% for profile in profiles %}
                    <div class="column is-one-third">
                        <div class="card">
                            <div class="card-image">
                                <figure class="image is-3by1">
                                    <img src="{{ profile.coverPicture }}" alt="Placeholder image">
                                </figure>
                            </div>
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-left">
                                        <figure class="image is-48x48">
                                            <img src="{{ profile.avatarPicture }}" alt="Placeholder image">
                                        </figure>
                                    </div>
                                    <div class="media-content">
                                        <p class="title is-4 mb-0">{{ profile.fullname }}</p>
                                        <a href="{{ path('profiles.show', {username: profile.username}) }}"
                                           class="subtitle is-6 is-underlined">
                                            @{{ profile.username }}
                                        </a>
                                    </div>
                                </div>

                                <div class="content">
                                    <p>{{ profile.description }}</p>
                                    <time class="mt-4 is-italic" datetime="2016-1-1">Inscritâ€¢e depuis le {{ profile.createdAt|date('d/m/Y') }}</time>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
